<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Obituaries</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <h1>Obituaries</h1>
        <nav>
            <a href="/obituary_form.html">Submit New Obituary</a>
        </nav>
    </header>
    <h1>Obituaries</h1>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Date of Birth</th>
                <th>Date of Death</th>
                <th>Content</th>
                <th>Author</th>
                <th>Submission Date</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            <% obituaries.forEach(obituary => { %>
                <tr>
                    <td><%= obituary.name %></td>
                    <td><%= obituary.date_of_birth %></td>
                    <td><%= obituary.date_of_death %></td>
                    <td><%= obituary.content %></td>
                    <td><%= obituary.author %></td>
                    <td><%= obituary.submission_date %></td>
                    <td><a href="/obituary/<%= obituary.slug %>">View</a></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
